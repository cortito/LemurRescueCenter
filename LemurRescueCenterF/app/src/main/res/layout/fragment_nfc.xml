<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.fragments.NFCFragment"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/lemurCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            design:cardElevation="8dp"
            design:cardUseCompatPadding="false"
            design:cardPreventCornerOverlap="true"
            design:cardCornerRadius="10dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="13dp">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="56dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/makicatta3"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">


                <TextView
                    android:paddingLeft="16dp"
                    android:id="@+id/resultReadTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tag Lemurien :  "
                    android:textSize="18sp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:paddingLeft="8dp"
                    android:id="@+id/resultRead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

                <Button
                    android:paddingStart="16dp"
                    android:id="@+id/getLemurANfc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="Chercher LÃ©murien "
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:background="@color/ap_transparent"
                    android:elevation="8dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:enabled="false"
                    />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/nfcLecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lire sur Tag NFC"
            android:background="@color/ap_white"
            />

    </LinearLayout>

</FrameLayout>
