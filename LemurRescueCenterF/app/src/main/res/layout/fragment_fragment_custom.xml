<FrameLayout
    android:id="@+id/profilLemur"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.fragments.ProfileFragment"
    android:layout_below="@+id/app_toolbar">

    <android.support.v7.widget.CardView
        android:id="@+id/lemurCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        design:cardElevation="3dp"
        design:cardUseCompatPadding="false"
        design:cardPreventCornerOverlap="true"
        design:cardCornerRadius="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentTop="true"
                android:id="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/makicatta3"
                android:scaleType="center"
                />

            <ScrollView
                android:layout_below="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:id="@+id/scrollView2"
                android:paddingTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/NomLemurien"
                        android:background="@color/ColoreditText">

                        <TextView
                            android:text="@string/name_Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editLemurNameTitle"
                            android:textColor="@android:color/background_dark"
                            android:paddingStart="16dp"
                            android:paddingEnd="8dp"
                            android:textStyle="normal|bold"
                            android:textSize="12sp"
                            android:layout_gravity="center" />
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text=""
                            android:id="@+id/editLemurName"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:layout_gravity="start"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/num_Identificationcustom"
                        >

                        <TextView
                            android:text="@string/id_Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editLemurNumIdTitle"
                            android:textColor="@android:color/background_dark"
                            android:paddingStart="16dp"
                            android:paddingEnd="8dp"
                            android:textStyle="normal|bold"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text=""
                            android:id="@+id/editLemurNumId"
                            android:layout_weight="1"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/AgeLemurien"
                        android:background="@color/ColoreditText">

                        <TextView
                            android:text="@string/age_Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editLemurAgeTitle"
                            android:textColor="@android:color/background_dark"
                            android:paddingStart="16dp"
                            android:paddingEnd="8dp"
                            android:textStyle="normal|bold"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text=""
                            android:id="@+id/editLemurAge"
                            android:layout_weight="1"
                            android:textColor="@android:color/black" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/SexL"
                        >
                        <TextView
                            android:text="@string/gender_Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editLemurGenderTitle"
                            android:textColor="@android:color/background_dark"
                            android:paddingStart="16dp"
                            android:paddingEnd="8dp"
                            android:textStyle="normal|bold"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text=""
                            android:id="@+id/editLemurGender"
                            android:layout_weight="1"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/OriginL"
                        android:background="@color/ColoreditText">
                        <TextView
                            android:text="Origine : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editLemurOriginTitle"
                            android:textColor="@android:color/background_dark"
                            android:paddingStart="16dp"
                            android:paddingEnd="8dp"
                            android:textStyle="normal|bold"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text=""
                            android:id="@+id/editLemurOrigin"
                            android:layout_weight="1"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lemurEntryDateCustom"
                        >
                        <TextView
                            android:text="Date d'entree : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editlemurEntryDateTitle"
                            android:textColor="@android:color/background_dark"
                            android:paddingStart="16dp"
                            android:paddingEnd="8dp"
                            android:textStyle="normal|bold"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:text=""
                            android:id="@+id/editlemurEntryDate"
                            android:layout_weight="1"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/LemurEntryNatureCustom"
                        android:background="@color/ColoreditText">
                        <TextView
                            android:text="Nature de l'entrée : "
                            android:layout_width="wrap_content"
