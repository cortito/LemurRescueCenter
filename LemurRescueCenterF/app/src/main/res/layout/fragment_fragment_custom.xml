                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text=""
                            android:id="@+id/editLemurLeavingCommentary"
                            android:layout_weight="1"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>
