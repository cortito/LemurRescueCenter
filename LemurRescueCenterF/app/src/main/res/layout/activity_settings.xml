<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projet_100_heures.lemurrescuecenter.activity.SettingsActivity">

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/app_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/include" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="127dp"
        android:layout_height="112dp"
        android:src="@drawable/makicatta3"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="Id : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IdLemur"
        app:layout_constraintRight_toLeftOf="@+id/editText"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <EditText
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="0123456"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/profileImage"
        android:singleLine="true"
        app:layout_constraintVertical_bias="0.52"
        android:layout_marginEnd="50dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/IdLemur"
        app:layout_constraintHorizontal_bias="0.79" />

    <ScrollView
        android:layout_width="344dp"
        android:layout_height="297dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/IdLemur"
        android:background="@color/colorBackground"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/NomLemurien">

                <TextView
                    android:text="Nom : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LemurNameTitle"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:id="@+id/LemurName"
                    android:layout_weight="1"
                    android:hint="MANI"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/AgeLemurien">

                <TextView
                    android:text="Age :  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/AgeTitle"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:id="@+id/LemurAge"
                    android:layout_weight="1"
                    android:hint="MANI"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/SexL">

                <TextView
                    android:text="Sexe : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sexTitle"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="sgsqrger"
                    android:id="@+id/Sex"
                    android:layout_weight="1"
                    android:hint="MANI"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/OriginL">

                <TextView
                    android:text="Origine : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/OriginTitle"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="efzefzef"
                    android:id="@+id/LemurGender"
                    android:layout_weight="1"
                    android:hint="MANI"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/blabla1">

                <TextView
                    android:text="Nom : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blabla2"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:id="@+id/blabla3"
                    android:layout_weight="1"
                    android:hint="MANI"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/blabla4">

                <TextView
                    android:text="Bla :  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blalba5"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="qrgerg"
                    android:id="@+id/blalba6"
                    android:layout_weight="1"
                    android:hint="MANI"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/blalba7">

                <TextView
                    android:text="Bla : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blalba8"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="zqrgreggqr"
                    android:id="@+id/blalba9"
                    android:layout_weight="1"
                    android:hint="MANI"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Blabla10">

                <TextView
                    android:text="Nom : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Blabla11"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:id="@+id/Blabla12"
                    android:layout_weight="1"
                    android:hint="MANI"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Blabla :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:id="@+id/editText3"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/sign_check_icon"
        android:id="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/editText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

</android.support.constraint.ConstraintLayout>
